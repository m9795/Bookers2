<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Log in</h2>
      <form action="/users/sign_in" accept-charset="UTF-8" method="post">
        <%= form_with model: @user, url: user_session_path do |f| %>
        
          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, class:"name" %>
          </div>
        
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class:"password" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        
          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </form>
    </div>
  </div>
</div>
