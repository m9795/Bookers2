<h2>User info</h2>
<div>
<%= image_tag @user.get_profile_image(100,100) %>
<p>name</p>
<%= @user.name %>
<p>introduction</p>  
<%= @user.introduction %>
</div>


<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<h2>Books</h2>
<p>Title</p>
<p>Opinion</p>
<% @books.each do |book| %>
<div>
  <%= book.title %>
  <%= book.body %>
</div>
<% end %>
